<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/three_bac">
    <ImageView
        android:layout_width="120px"
        android:layout_height="83px"
        android:src="@drawable/phone_bac_fifth2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="170px"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_bac_fifth4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43px"
        android:layout_marginLeft="5px"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_bac_fifth3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="220px"
        android:layout_marginBottom="20px"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_bac_forth1"
        android:layout_marginTop="103px"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="73px"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginTop="180px"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="180px"
        android:src="@drawable/phone_forth"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="270px"
        android:layout_height="450px"
        android:layout_marginTop="222px"
        android:layout_toRightOf="@+id/iv_phone"
        android:layout_marginLeft="81px"
        android:layout_marginBottom="128px">
        <TextView
            android:id="@+id/tv_retina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retina Display"
            android:textColor="#666666"
            android:textSize="28px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_retina"
            android:layout_marginTop="30px"
            android:text="On the innovation and precision of the precess,the iPhone 7 reached new heights that we didn't have before.The bright black look is very different from what we used to do."/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design"
        android:textSize="53px"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="143px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="336px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="270px"
        android:layout_height="450px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="99px"
        android:layout_marginTop="220px"
        android:layout_marginBottom="128px"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>
            <TextView
                android:id="@+id/tv_retina_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retina Display"
                android:textColor="#999999"
                android:textSize="28px"
                android:layout_toRightOf="@+id/iv_phone_icon"
                android:layout_marginLeft="14px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5inch"
                android:layout_marginLeft="14px"
                android:layout_toRightOf="@+id/iv_phone_icon"
                android:layout_below="@+id/tv_retina_one"
                android:layout_marginTop="14px"/>

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_phone_icon_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>
            <TextView
                android:id="@+id/tv_retina_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retina Display"
                android:textColor="#999999"
                android:textSize="28px"
                android:layout_toRightOf="@+id/iv_phone_icon_two"
                android:layout_marginLeft="14px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5inch"
                android:layout_marginLeft="14px"
                android:layout_toRightOf="@+id/iv_phone_icon_two"
                android:layout_below="@+id/tv_retina_two"
                android:layout_marginTop="14px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_phone_icon_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"/>
            <TextView
                android:id="@+id/tv_retina_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retina Display"
                android:textColor="#999999"
                android:textSize="28px"
                android:layout_toRightOf="@+id/iv_phone_icon_three"
                android:layout_marginLeft="14px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5inch"
                android:layout_marginLeft="14px"
                android:layout_toRightOf="@+id/iv_phone_icon_three"
                android:layout_below="@+id/tv_retina_three"
                android:layout_marginTop="14px"/>

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>